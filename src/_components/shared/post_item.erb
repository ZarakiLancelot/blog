<article class="flex max-w-xl flex-col items-start justify-between">
  <div class="flex items-center gap-x-4 text-xs">
    <time datetime="<%= @post.data.date %>" class="text-gray-500"><%= @post.data.human_date %></time>
    <% @post.data.categories.each do |category| %>
      <span class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100"><%= category %></span>
    <% end %>
  </div>
  <div class="group relative">
    <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
      <a href="<%= @post.relative_url %>">
        <span class="absolute inset-0"></span>
        <%= @post.data.title %>
      </a>
    </h3>
    <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600"><%= @post.data.description %></p>
  </div>
</article>
